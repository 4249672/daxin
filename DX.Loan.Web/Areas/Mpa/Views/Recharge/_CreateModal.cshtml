@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNew")))

<div class="modal-body">
    <form role="form" name="RechargeForm" novalidate class="form-validation">

        @*<div class="form-group form-md-line-input form-md-floating-label no-hint">
                <input class="form-control@(Model.Name.IsNullOrEmpty() ? "" : " edited")" type="text" name="Name" value="@Model.Name" required maxlength="20" />
