            </div>*@

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <label for="">用户账号</label>
            @Html.DropDownListFor(
                      m=>m.userId,
                      Model.Users.Select(i => i.ToSelectListItem()),
                      new
                      {
                          @class = "form-control selectpicker",
                          data_live_search = "true",
                          @required = "",
                          id = "userId"
                      })
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <label>交易类型</label>

            @Html.DropDownListFor(m => m.TradeType, Model.TradeTypeList.Select(i=>i.ToSelectListItem()), new
        {
            @class = "form-control selectpicker",
            @required="",
            data_live_search = "true"
        })
        </div>

        <div class="form-group form-md-line-input form-md-floating-label no-hint">
            <input type="text" name="Amount" class="form-control onlyPointNum" point="2" negative="0" required value="" maxlength="12" />
            <label>金额</label>
        </div>






    </form>
</div>
